rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Courses are publicly readable by anyone
    match /courses/{courseId} {
      allow read: if true;
      
      // IMPORTANT: This allows ANY authenticated user to create, update, or delete courses.
      // For a production app, you should implement role-based access control
      // (e.g., using Firebase custom claims) to restrict this to only admins.
      allow write: if request.auth != null;
    }
    
    // Bookings are only accessible by authenticated users for management,
    // but can be created by anyone.
    match /bookings/{bookingId} {
      // Admins can read all booking info.
      allow read: if request.auth != null;

      // Anyone can create a booking (submit the booking form).
      allow create: if true;
      
      // Only admins can update or delete bookings.
      allow update, delete: if request.auth != null;
    }
  }
}
