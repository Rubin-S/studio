
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Courses Collection ---
    // Anyone can view courses.
    // Writes are open so the admin panel's server actions can modify them.
    // WARNING: This is insecure. In production, lock this down to authenticated admins.
    match /courses/{courseId} {
      allow read: if true;
      allow write: if true; // Should be: if request.auth != null;
    }

    // --- Bookings Collection ---
    // All operations are allowed so server actions can create/read/delete bookings.
    // WARNING: This is insecure. Reads and deletes should be admin-only.
    match /bookings/{bookingId} {
      allow read, write: if true; // Should be granular (e.g., allow create: if true; allow read, delete: if request.auth != null)
    }
  }
}
